{% extends 'base.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block body %}
    {% include 'page/navbar.html.twig' %}

    <div class="container">
        <div class="row">
            <div class="col-auto">
                <div class="row justify-content-center mt-5">
                    <div class="col-auto">
                        <div class="card shadow-lg border-0 rounded-lg mt-2">
                            <div class="card-body">

                                <table class="table table-bordered table-hover table-responsive" id="dataTable myTable" width="100%" cellspacing="0">
                                    <thead>
                                    <tr>
                                        <th scope="col">Email</th>
                                        <th scope="col">Nom d'utilisateur</th>
                                        <th scope="col">Service</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Heure</th>
                                        <th scope="col">Actions</th>
                                        <th scope="col">Mail</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for rendez_vous in rendez_vouses %}
                                        <tr>
                                            <td>{{ rendez_vous.email }}</td>
                                            <td>{{ rendez_vous.username }}</td>
                                            <td>{{ rendez_vous.service }}</td>
                                            <td>{{ rendez_vous.date|date("d/m/Y") }}</td>
                                            <td>{{ rendez_vous.heure }}</td>
                                            <td>
                                                {{ include('rendez_vous/_delete_form.html.twig') }}
                                            </td>
                                            <td>
                                                <a href="{{ path('rdv_admin_mailer', {'id': rendez_vous.rdv_id}) }}">Mail rappel</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-auto">
                <div class="row justify-content-end mt-5">
                    <div class="col-auto">
                        <div class="card shadow-lg border-0 rounded-lg">
                            <div class="card-body">
                                <a href="{{ path('rendez_vous_new') }}">Create new</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
{% endblock %}
